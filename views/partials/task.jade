        .row
          .col-md-12
            p(ng-bind="task.description",style='font-size:150%;color:orange;')
            button.btn.btn-lg.btn-primary.mr-xs.mb-lg(type='button') Update
            button.btn.btn-lg.btn-primary.mr-xs.mb-lg(type='button') Delete
  
   

